<!--pages/bookshelf/bookshelf.wxml-->
<nav-bar navbarData="{{ navbarData }}" backgroundColor="{{ background }}"></nav-bar>

<button bindtap="addBookshelf">新增书单</button>

<view class="bookshelf padding-left-sm" wx:for="{{bookshelfs}}">
  <view class="padding-tb-xs padding-right text-sm">
    <text class="text-xs">共{{item.child.length}}本</text>
    <text class="margin-lr-xs">/</text>
    <text>{{item.name}}</text>
  </view>
  <scroll-xbox wx:if="{{item.child && item.child.length>0}}">
    <view class="bookshelf_item acea-row row-column row-between-wrapper padding-sm margin-right-xs margin-bottom-sm bg-img bg-mask" wx:for="{{item.child}}" wx:for-item="it" style="background-image: url({{it.images}});background-color: {{background}};" bindtap="goDetail" data-id="{{it.book_id}}">
      <view class="text-sm">{{it.book_name}}</view>
      <view>{{it.type_name}}</view>
      <view class="bookshelf_time">{{it.read_time}}</view>
    </view>
  </scroll-xbox>
</view>