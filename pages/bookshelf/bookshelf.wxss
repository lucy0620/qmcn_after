/* pages/bookshelf/bookshelf.wxss */
/* 书架 */
.bookshelf_title .more::before {
  content: '进入书架';
}

.bookshelf {
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.bookshelf:last-child {
  margin-bottom: 0;
}

.bookshelf_item {
  position: relative;
  border-radius: 6rpx;
  color: #fff;
  border: 1px solid #e3e3e3;
  overflow: hidden;
  font-size: 20rpx;
  box-shadow: 0px 2rpx 4rpx rgba(0, 0, 0, 0.05);
  width: 150rpx;
  height: 200rpx;
}

.bookshelf_item view {
  text-align: center;
}

.bookshelf_item:last-child {
  margin-right: 20rpx;
}

.bookshelf_item .bookshelf_time {
  position: absolute;
  bottom: 0;
  font-size: 16rpx;
}