/* pages/book/book_detail/book_detail.wxss */
page {
  min-height: 100vh;
  background-color: #fff;
}

.head {
  display: flex;
  background-color: rgba(255,255,255,.3);
  border-radius: 4rpx;
}

.head_l {
  flex: 1;
}

.head_l .head_name {
  line-height: 1;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.head_l .head_label {
  font-size: 20rpx;
  border-radius: 4rpx;
  padding: 0 6rpx;
  background: #f0f0f0;
  border: 1px solid #fff;
}

/* 文字两端对齐 */
.head_l .text-bold {
  /* display: inline-block;
  width: 4em;
  text-align: justify;
  text-justify: distribute-all-lines;
  text-align-last: justify; */
}

.head_r {
  margin-left: 20rpx;
  width: 300rpx;
  height: 400rpx;
}

.head_r image {
  border-radius: 8rpx;
  height: 400rpx;
}

/* 书架弹窗 */
.readTime {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}