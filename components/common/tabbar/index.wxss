/* component/commen/tabbar/index.wxss */
/* 总高度110rpx/178rpx */
.tab-bar {
  width: 100%;
  height: 100rpx;
  box-sizing: content-box;
  position: fixed;
  padding-top: 10rpx;
  bottom: 0;
  background: #F6F6F7;
  display: flex;
  z-index: 99;
  box-shadow: 0px -4px 4px rgba(0, 0, 0, 0.06);
}
.section_item {
  flex: 1;
  text-align: center;
  position: relative;
}
.section_item .section_iconView{
  height: 50rpx;
}
.center {
  background-color: #F6F6F7;
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 50%;
  top: -70rpx;
  transform: translateX(-50%);
  box-shadow: 0px -4px 4px rgba(0, 0, 0, 0.06);
  font-size: 3em;
}
.section_item .section_iconView .section_icon {
  font-size: 1.8em;
}
/* 中间一项 */
.section_item .section_title {
  font-size: .8em;
  font-weight:300;
}