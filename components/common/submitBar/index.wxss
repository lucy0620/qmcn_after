 .fixation{
  box-sizing: content-box;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  z-index: 88;
}
 .fixation-left{
   display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
  flex: 1;
}
.fixation-right{
  display: flex;
}
.btn {
  background-color: #555555;
  text-align: center;
  line-height: 90rpx;
  width: 200rpx;
  color: white;
}

